{
  "name": "@ample-labs/exchange-contracts",
  "description": "Exchange contracts from Uniswap v2, and new features",
  "version": "0.1.6",
  "license": "GPL-3.0",
  "scripts": {
    "compile": "hardhat compile",
    "deploy:testnet": "hardhat run --network polygonTestnet scripts/deploy.ts",
    "deploy:mainnet": "hardhat run --network polygonMainnet scripts/deploy.ts",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:size-contracts": "hardhat size-contracts"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-truffle5": "^2.0.6",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "^4.2.0",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@uniswap/lib": "4.0.1-alpha",
    "ethereum-waffle": "^3.4.4",
    "mocha-chai-jest-snapshot": "^1.1.4"
  },
  "files": [
    "contracts/interfaces",
    "contracts/libraries",
    "artifacts/contracts/AmpleFactory.sol/AmpleFactory.json",
    "artifacts/contracts/AmpleRouter.sol/AmpleRouter.json",
    "artifacts/contracts/AmplePair.sol/AmplePair.json",
    "artifacts/contracts/base/Multicall.sol/Multicall.json",
    "artifacts/contracts/interfaces/**/*.json",
    "!artifacts/contracts/interfaces/**/*.dbg.json"
